<%= form_with model: @template, url: { action: 'update' }, class: 'modal-card' do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'com/extra/item', locals: { model: @template, f: f } %>
  </section>
  <footer class="modal-card-foot">
    <%= f.submit %>
  </footer>
<% end %>
